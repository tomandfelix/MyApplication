<resources>

    <!-- Base application theme.-->
    <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkActionBar.ActionBar">
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:textColor">@color/material_drawer_primary_text</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/material_drawer_primary_text</item>
        <item name="android:textColorHint">@color/material_drawer_hint_text</item>
    </style>

    <!--Material DEFAULT colors -->
    <color name="material_drawer_primary">#3F51B5</color>
    <color name="material_drawer_primary_dark">#303F9F</color>
    <color name="material_drawer_primary_light">#C5CAE9</color>
    <color name="material_drawer_accent">#FF4081</color>
    <color name="material_drawer_window_background">#FFFFFF</color>
    <color name="material_drawer_background">#FFFFFF</color>
    <!-- Material DEFAULT text / items colors -->
    <color name="material_drawer_icons">#ff000000</color>
    <color name="material_drawer_primary_text">#ff000000</color>
    <color name="material_drawer_secondary_text">#ff000000</color>
    <color name="material_drawer_hint_text">#4d000000</color>
    <color name="material_drawer_divider">#1f000000</color>
    <!-- Material DEFAULT drawer colors -->
    <color name="material_drawer_selected">#E8E8E8</color>
    <color name="material_drawer_selected_text">#3F51B5</color>

</resources>
