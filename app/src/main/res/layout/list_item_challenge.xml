<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin">


    <TextView
        android:id="@+id/challenge_list_name"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Challenge name123456789"/>

    <ImageView
        android:id="@+id/challenge_list_people_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/challenge_list_name"
        android:layout_marginTop="7dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/icon_people"/>

    <TextView
        android:id="@+id/challenge_list_people"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/challenge_list_people_icon"
        android:layout_alignBottom="@+id/challenge_list_people_icon"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/challenge_list_people_icon"
        android:layout_marginLeft="7dp"
        android:text="2"/>
</RelativeLayout>