<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp">

    <ImageView
        android:id="@+id/leaderboard_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/avatar_manager_128"/>
    
    <TextView
        android:id="@+id/leaderboard_rank"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/leaderboard_avatar"
        android:layout_marginLeft="@dimen/activity_margin"
        android:text="1000"/>

    <TextView
        android:id="@+id/leaderboard_username"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/leaderboard_avatar"
        android:layout_marginLeft="70dp"
        android:text="Username"/>

    <TextView
        android:id="@+id/leaderboard_experience"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="9000"/>

</RelativeLayout>