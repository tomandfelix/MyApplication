<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/connection_start_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start the day"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:onClick="startDay"
                android:background="@drawable/custom_button"/>
            <ListView
                android:id="@+id/connection_paired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible">
            </ListView>
            <ProgressBar
                android:id="@+id/connection_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:indeterminate="true"/>
            <Button
                android:id="@+id/connection_stop_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop the day"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:onClick="stopDay"
                android:background="@drawable/custom_button"/>
        </RelativeLayout>
        <include layout="@layout/drawer"/>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>