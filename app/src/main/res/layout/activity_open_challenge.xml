<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_margin"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ListView
                android:id="@+id/open_challenge_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:divider="@color/divider"/>
        </LinearLayout>
        <TextView
            android:id="@+id/open_challenge_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Challenge title"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/open_challenge_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@id/open_challenge_title"
            android:text="description of challenge"
            android:textSize="15dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/open_challenge_decline_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/raised_button_height"
                android:layout_weight="1"
                android:text="Decline"
                android:onClick="declineChallenge"
                android:background="@color/primaryColor"/>

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/open_challenge_start_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/raised_button_height"
                android:layout_weight="1"
                android:text="Start"
                android:onClick="startChallenge"
                android:background="@color/primaryColor"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/drawer"/>
</LinearLayout>